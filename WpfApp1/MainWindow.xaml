<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="My windows -v" Height="150" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label>Quelle est ma version windows ?</Label>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <TextBox x:Name="versionResponse" Height="30" />
            <Button x:Name="btnVoir" Click="ButtonDisplayVersion" Content="Voir" Margin="0,6,0,0" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

